<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/recyclerviewborder"

  >


    <TextView
        android:id="@+id/nim_nilai"
        android:layout_width="84dp"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view_2"
        android:padding="10dp"
        android:text="71140011"
        android:textAlignment="center"
        android:textSize="14sp" />

    <View

        android:id="@+id/view"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nim_nilai"
        android:background="#c0c0c0" />

    <View

        android:id="@+id/view_3"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/nilai_detail"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/nilai_detail"
        android:layout_width="59dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="89.70"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/nomer"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:padding="10dp"
        android:text="1 "
        android:textSize="14sp" />

    <View

        android:id="@+id/view_2"
        android:layout_width="1dp"
        android:layout_height="60dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/nomer"
        android:background="#c0c0c0" />

    <TextView
        android:id="@+id/nama_nilai_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/view"
        android:layout_toStartOf="@+id/view_3"
        android:padding="10dip"
        android:text="Yehezkiel"
        android:textAlignment="center"
        android:textSize="14sp" />


</RelativeLayout>