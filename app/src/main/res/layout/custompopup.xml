<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="475dp"
    android:background="@color/white"
    android:layout_gravity="center">
    

    
    <TextView
        android:id="@+id/txtClose"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:textColor="@color/black"
        android:layout_margin="10dp"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/circlebackground"/>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center"
        android:background="@color/white">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="#36454f"
            android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kode :"
            android:fontFamily="@font/roboto_regular"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[TI0366]"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/roboto_regular"

            android:textColor="@color/white"/>

    </LinearLayout>
        
    </LinearLayout>



    <TextView
        android:id="@+id/nama_matkul_popup"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="3dp"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/colorPrimary"
        android:text="Rekayasa Perangkat Lunak"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"

        android:background="@color/white">

        <TextView
            android:padding="10dp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Daftar Dosen"
            android:fontFamily="@font/librefranklin_bold"
            android:textColor="@color/black"
            android:textSize="15sp" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRecyclerDosen"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <TextView
        android:textStyle="bold"
        android:padding="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan Matakuliah "
        android:textColor="@color/black"
        android:fontFamily="@font/librefranklin_bold"

        android:textSize="15sp" />
    
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">




        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="#36454f"
            android:orientation="vertical"
            >

            <TextView

                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bobot"
                android:fontFamily="@font/roboto_regular"

                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/bobot_matkul_popup"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:fontFamily="@font/roboto_regular"

                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#36454f"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:text="Semester GASAL 2018/2019"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_regular"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout

                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="75dp"

                android:layout_gravity="center"
                android:background="#36454f"
                android:orientation="vertical">

                <TextView

                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kelas"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/kelas_matkul_popup"
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="D.1.3"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:fontFamily="@font/roboto_regular"
                    />

            </LinearLayout>
    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="#36454f"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jam :"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                />

            <TextView
                android:id="@+id/jam_matkul_popup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="[TI0366]"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>